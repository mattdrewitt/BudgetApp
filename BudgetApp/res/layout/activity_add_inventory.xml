<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddInventoryActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="14dp"
            android:layout_weight="10.90"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editUpc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="UPC #" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:hint="Name"/>

            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            
            <EditText
                android:id="@+id/editCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10" 
                android:hint="Cost $"/>
            
                   
            <EditText
                android:id="@+id/editQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10" 
                android:hint="Quantity"/>

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regular Purchase" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Item" />

            <Spinner
                android:id="@+id/spinnerPurchaseOccurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/purchaseOccurance" />
            
            <Button
                android:id="@+id/btnEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Item" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>