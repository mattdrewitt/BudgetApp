<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/imageBarcode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:onClick="onClickScanner"
            android:scaleType="fitCenter"
            android:src="@drawable/barcode_icon"
            android:background="@drawable/white_button"/>

        <ImageButton
            android:id="@+id/imageManual"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="0.38"
            android:onClick="onClickManual"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/manual_icon" 
            android:background="@drawable/white_button"/>      

    </LinearLayout>
    
        <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan a Barcode or enter manually" 
        android:layout_marginBottom="5dp"
        android:textSize="20dp"
        android:gravity="center" 
        android:textColor="#0794E8"/>

</LinearLayout>