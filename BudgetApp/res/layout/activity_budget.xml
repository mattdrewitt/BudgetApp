<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BudgetActivity" 
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="278dp"
            android:layout_height="362dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnViewBudget"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:onClick="onClick"
                android:text="VIEW BUDGET"
                android:textColor="#0794E8"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="left"
                android:background="@drawable/white_button"
                android:drawableLeft="@drawable/ic_action_view_as_grid" />

            <Button
                android:id="@+id/btnEditBudget"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:onClick="onClick"
                android:text="EDIT BUDGET"
                android:textColor="#0794E8"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="left"
                android:background="@drawable/white_button"
                android:drawableLeft="@drawable/ic_action_keyboard" />

            <Button
                android:id="@+id/btnEditCategories"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:onClick="onClick"
                android:text="CATEGORIES"
                android:textColor="#0794E8"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="left"
                android:background="@drawable/white_button"
                android:drawableLeft="@drawable/ic_action_new_event" />

        </LinearLayout>
    </LinearLayout>

    <Button
		        android:id="@+id/button1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentBottom="true"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="14dp"
		        android:onClick="onClickBack"
                android:text="BACK TO MAIN"
                android:textColor="#0794E8"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="@drawable/white_button"
                android:drawableLeft="@drawable/ic_action_backspace" />

</RelativeLayout>